              <exec command="python3">
                <arg>-c</arg>
                <arg>import os; import json; import time; result = 'Passed' if os.path.exists('passed') else 'Failed'; data = {'pipeline_name': os.environ['GO_PIPELINE_NAME'], 'result': result, 'time': time.time()}; open('result', 'w').write(json.dumps(data))</arg>
